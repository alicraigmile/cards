html(lang="en")
  head
    title= pageTitle
    link(rel='stylesheet', href='/cards.css', type='text/css' )
  body
    #container.col
      for card in cards
        .card
          .top
            .title
              h2
                = card.title
            .keywords
              for keyword in card.keywords
                span.keyword
                  = keyword
            if card['harddeadline']
              .deadline
                = 'Deadline: '
                = card['harddeadline']
            if card['editorialpriority']
              .priority
                = 'Priority '
                = card['editorialpriority']
          .right
            .how
              h3 How?
              ul
              for how in card.howlist
                li
                  = how
          .left
            .why
              h3 Why?
              p= card['whysolveswhichproblem']
            .notes
              h3 Notes
              p= card['notes']
          .bottom
            .size
              .tshirtsize
                = card['t-shirtsize']
              .devtime
                = card['devtime']
              .elapsedtime
              = card['elapsedtime']
